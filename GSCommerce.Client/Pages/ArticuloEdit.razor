                <!-- Imagen del artículo -->
                <div class="mb-3 text-center">
                    <label class="form-label">Imagen del artículo</label><br />
                    <img src="@articulo.Foto" class="img-thumbnail" width="100" style="display: @(string.IsNullOrEmpty(articulo.Foto) ? "none" : "block")" />
