@page "/reportes"
@inject NavigationManager Navigation

<h3 class="mb-4 fw-bold text-uppercase">Reportes</h3>
<div class="d-flex gap-4">
    <div class="card text-center shadow-lg p-3"
         style="width: 150px; height: 180px; cursor: pointer; border-radius: 10px;"
         @onclick="IrAReporteVentasVendedor">
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <i class="bi bi-person-fill" style="font-size: 3rem; color: #6c757d;"></i>
            <h5 class="fw-bold mt-2 text-uppercase" style="white-space: nowrap;">Ventas por Vendedor</h5>
        </div>
    </div>
    <div class="card text-center shadow-lg p-3"
         style="width: 150px; height: 180px; cursor: pointer; border-radius: 10px;"
         @onclick="IrAReporteVentasDetalladas">
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <i class="bi bi-receipt-cutoff" style="font-size: 3rem; color: #6c757d;"></i>
            <h5 class="fw-bold mt-2 text-uppercase" style="white-space: nowrap;">Ventas Detalladas</h5>
        </div>
    </div>
    <div class="card text-center shadow-lg p-3"
         style="width: 150px; height: 180px; cursor: pointer; border-radius: 10px;"
         @onclick="IrAReporteVentasArticulo">
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <i class="bi bi-receipt-cutoff" style="font-size: 3rem; color: #6c757d;"></i>
            <h5 class="fw-bold mt-2 text-uppercase" style="white-space: nowrap;">Ventas por Articulo</h5>
        </div>
    </div>
    <div class="card text-center shadow-lg p-3"
         style="width: 150px; height: 180px; cursor: pointer; border-radius: 10px;"
         @onclick="IrAReporteRanking">
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <i class="bi bi-receipt-cutoff" style="font-size: 3rem; color: #6c757d;"></i>
            <h5 class="fw-bold mt-2 text-uppercase" style="white-space: nowrap;">Reporte Ranking Vendedoras</h5>
        </div>
    </div>
    <div class="card text-center shadow-lg p-3"
         style="width: 150px; height: 180px; cursor: pointer; border-radius: 10px;"
         @onclick="IrAReporteTOPten">
        <div class="card-body d-flex flex-column align-items-center justify-content-center">
            <i class="bi bi-receipt-cutoff" style="font-size: 3rem; color: #6c757d;"></i>
            <h5 class="fw-bold mt-2 text-uppercase" style="white-space: nowrap;">Reporte TOP TEN</h5>
        </div>
    </div>

</div>

@code {
        private void IrAReporteVentasVendedor()
        {
            Navigation.NavigateTo("/reportes/ventas-vendedor");
        }

    private void IrAReporteVentasDetalladas()
    {
        Navigation.NavigateTo("/reportes/ventas-detalladas");
    }
    private void IrAReporteVentasArticulo()
    {
        Navigation.NavigateTo("/reportes/ventas-articulo");
    }
    private void IrAReporteRanking()
    {
        Navigation.NavigateTo("/reportes/ranking-vendedoras");
    }

    private void IrAReporteTOPten()
    {
        Navigation.NavigateTo("/reportes/top10-articulos");
    }
 

}
