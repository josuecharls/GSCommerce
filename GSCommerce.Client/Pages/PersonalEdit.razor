@page "/personal/edit/{id:int}"
@using GSCommerce.Client.Models
@using GSCommerce.Client.Services
@inject PersonalService PersonalService
@inject NavigationManager Navigation
@inject HttpClient Http
@inject AuthService AuthService

<h3>Editar Personal</h3>

@if (personal != null)
{
    <div class="card p-4 shadow-lg">
        <form @onsubmit="GuardarCambios">
            <div class="mb-3">
                <label class="form-label">Nombres</label>
                <input type="text" class="form-control" @bind="personal.Nombres" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Apellidos</label>
                <input type="text" class="form-control" @bind="personal.Apellidos" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Documento de Identidad</label>
                <input type="text" class="form-control" @bind="personal.NumeroDocIdentidad" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Celular</label>
                <input type="text" class="form-control" @bind="personal.Celular" required maxlength="9" />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" @bind="personal.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Cargo</label>
                <input type="text" class="form-control" @bind="personal.Cargo" disabled="@isCajero" />
            </div>

            <div class="mb-3">
                <label class="form-label">Fecha de Ingreso</label>
                <input type="date" class="form-control" @bind="personal.FechaIngreso" />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success me-2">Guardar Cambios</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
            </div>
        </form>
    </div>
}
else
{
    <p>Cargando datos...</p>
}

@code {
    [Parameter]
    public int id { get; set; } 

    private PersonalDTO? personal;
    private bool isCajero = false;
    private int? idAlmacenUsuario;

    protected override async Task OnInitializedAsync()
    {
        var cargoUsuario = await AuthService.GetUserCargo();
        isCajero = string.Equals(cargoUsuario, "CAJERO", StringComparison.OrdinalIgnoreCase);
        if (isCajero)
        {
            idAlmacenUsuario = await AuthService.GetUserAlmacenId();
        }

        personal = await PersonalService.GetPersonalById(id);
        if (personal == null || (isCajero && (personal.Cargo != "VENDEDOR" || personal.IdAlmacen != idAlmacenUsuario)))
        {
            Navigation.NavigateTo("/personal");
        }
    }

    private async Task GuardarCambios()
    {
        if (personal != null)
        {
            if (isCajero)
            {
                personal.Cargo = "VENDEDOR";
                personal.IdAlmacen = idAlmacenUsuario;
            }
            await PersonalService.UpdatePersonal(id, personal);
            Navigation.NavigateTo("/personal");
        }
    }

    private void Cancelar()
    {
        Navigation.NavigateTo("/personal");
    }
}